 <h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @the_director.id %>" class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://image.tmdb.org/t/p/w500/6U1eHg30snkOhSM9WJT2asAesR9.jpg" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>
<table border = "1">
<% @filmography.each do |film| %>
  <tr>
    <td>
      <%= film.id %>
    </td>
  
    <td>
      <img src="http://robohash.org/<%= film.image %>">
    </td>
  
    <td>
      <%= film.title %>
    </td>
  
    <td>
      <%= film.year %>
    </td>
 
    <td>  
      <% d = Director.where({ :id => film.director_id}).at(0) %>
      <%= d.name %>
    </td>
 
    <td>
      <a href="/movies/<%= film.id %>">
      Show details
    </a>
    </td>
  </tr>
<% end %>

</table>
